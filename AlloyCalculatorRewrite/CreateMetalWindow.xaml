<Window x:Class="AlloyCalculatorRewrite.CreateMetalWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AlloyCalculatorRewrite"
        mc:Ignorable="d"
        Background="Gray"
        Title="Create Metal" Height="300" Width="400">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition  Height= "50"></RowDefinition>
            <RowDefinition  Height= "50"></RowDefinition>
            <RowDefinition  Height= "50"></RowDefinition>
            <RowDefinition  Height= "50"></RowDefinition>
            <RowDefinition  Height= "25"></RowDefinition>
            <RowDefinition  Height= "50"></RowDefinition>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <StackPanel>
                <Label Content="Metal Name"></Label>
                <TextBox Name="MetalNameTextBox" Text="" TextChanged="MetalNameTextBox_TextChanged"></TextBox>
            </StackPanel>
        </Grid>

        <Grid Grid.Row="1">
            <StackPanel>
                <Label Content="Single Ingot Volume (mb)" Visibility="Hidden"></Label>
                <TextBox Name="IngotVolumeTextBox" Text="" TextChanged="IngotVolumeTextBox_TextChanged" Visibility="Hidden"></TextBox>
            </StackPanel>
        </Grid>

        <Grid Grid.Row="1">
            <StackPanel>
                <Label Content="Minimum Percent"></Label>
                <TextBox Name="MinimumPercentTextBox" Text="" TextChanged="MinimumPercentTextBox_TextChanged"></TextBox>
            </StackPanel>
        </Grid>

        <Grid Grid.Row="2">
            <StackPanel>
                <Label Content="Maximum Percent"></Label>
                <TextBox Name="MaximumPercentTextBox" Text="" TextChanged="MaximumPercentTextBox_TextChanged"></TextBox>
            </StackPanel>
        </Grid>

        <Button Name="SubmitButton" Content="Submit" Grid.Row="3" Background="GreenYellow" Click="SubmitButton_Click" Visibility="Hidden"></Button>
        <TextBlock Name="ErrorMessageTextBlock" Grid.Row="5" Foreground="Red" FontSize="20"></TextBlock>
    </Grid>
</Window>
