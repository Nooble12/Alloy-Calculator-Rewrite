<Window x:Class="AlloyCalculatorRewrite.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AlloyCalculatorRewrite"
        mc:Ignorable="d"
        Background="Gray"
        Title="Alloy Calculator 2.0" Height="450" Width="800">
    <Grid>
        <StackPanel>
            <Menu>
                <MenuItem Header="File">
                    <MenuItem Header="Save File" Click="SaveFileButton_Click"></MenuItem>
                    <MenuItem Header="Load File" Click="LoadFile_Click"></MenuItem>
                </MenuItem>
                <MenuItem Header="Options">
                    <MenuItem Header="Add Metal" Click="AddMetal_Click"></MenuItem>
                    <MenuItem Header="Calculate Alloy" Click="CalculateAlloy_Click"></MenuItem>
                    <MenuItem Header="Clear All Metals" Click="ClearAllMetal_Click"></MenuItem>
                    <MenuItem Header="About" Click="About_Click"></MenuItem>
                </MenuItem>
            </Menu>
            <Grid HorizontalAlignment="Center" Height="400" Width="770" Margin="10" Background="Gray">
                <StackPanel>
                    <TextBox Name="AlloyNameTextBox" Text="Alloy Name Here" TextChanged="AlloyNameTextBox_TextChanged"></TextBox>
                    <TextBox Name="MaxAlloyVolumeTextBox" Text="Alloy Volume (mb)" TextChanged="MaxAlloyVolumeTextBox_TextChanged"></TextBox>

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="125"></ColumnDefinition>
                            <ColumnDefinition Width="125"></ColumnDefinition>
                            <ColumnDefinition Width="125"></ColumnDefinition>
                            <ColumnDefinition Width="125"></ColumnDefinition>
                        </Grid.ColumnDefinitions>
                        <Label Foreground="White" Content="Name" Grid.Column="0"></Label>
                        <Label Foreground="White" Content="Ingot Volume (mb)" Grid.Column="1"></Label>
                        <Label Foreground="White" Content="Minimum %" Grid.Column="2"></Label>
                        <Label Foreground="White" Content="Maximum %" Grid.Column="3"></Label>
                    </Grid>
                    
                    <ListBox Margin="0" Name="MetalListBox" Background="Gray">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Grid Margin="0" VerticalAlignment="Center">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="125"/>
                                        <ColumnDefinition Width="125"/>
                                        <ColumnDefinition Width="125"/>
                                        <ColumnDefinition Width="125"/>
                                        <ColumnDefinition Width="50"/>
                                        <ColumnDefinition Width="50"/>
                                    </Grid.ColumnDefinitions>
                                    
                                    <Label Foreground="White" Content="{Binding Name}" Grid.Column="0" VerticalAlignment="Center"></Label>
                                    <Label Foreground="White" Content="{Binding IngotVolume}" Grid.Column="1" VerticalAlignment="Center"></Label>
                                    <Label Foreground="White" Content="{Binding minimumPercent}" Grid.Column="2" VerticalAlignment="Center"></Label>
                                    <Label Foreground="White" Content="{Binding maximumPercent}" Grid.Column="3" VerticalAlignment="Center"></Label>
                                    <Button Name="EditButton" Click="EditButton_Click" Content="Edit" Grid.Column="4"></Button>
                                    <Button Name="DeleteButton" Click="DeleteButton_Click" Content="X" Foreground="Red" Grid.Column="5"></Button>
                                </Grid>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </StackPanel>
            </Grid>
        </StackPanel>
    </Grid>
</Window>
