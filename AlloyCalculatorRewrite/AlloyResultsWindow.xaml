<Window x:Class="AlloyCalculatorRewrite.AlloyResultsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AlloyCalculatorRewrite"
        mc:Ignorable="d"
        Background="Gray"
        Title="Alloy Results Window" Height="450" Width="450">
    <Grid>
        <Label Content="Results" FontSize="30" HorizontalAlignment="Center" VerticalAlignment="Top" Foreground="White"></Label>
        <TextBlock Name="ResultsTextBox" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="20" Foreground="White"></TextBlock>
        <Button Content="Save To File" HorizontalAlignment="Center" VerticalAlignment="Bottom" FontSize="30" Click="Button_Click" Visibility="Hidden"></Button>
    </Grid>
</Window>
