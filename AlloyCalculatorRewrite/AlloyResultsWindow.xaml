<Window x:Class="AlloyCalculatorRewrite.AlloyResultsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AlloyCalculatorRewrite"
        mc:Ignorable="d"
        Background="Gray"
        Title="Alloy Results Window" Height="450" Width="650">
    <Grid>
        <Label Name="ErrorLabel" Content="Could not find solution" FontSize="30" Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center" Visibility="Hidden"></Label>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Top">
            <Label Content="Results" FontSize="30" HorizontalAlignment="Center" VerticalAlignment="Top" Foreground="White"></Label>
            
            <Grid Name="HeaderGrid">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="200"/>
                    <ColumnDefinition Width="200"/>
                    <ColumnDefinition Width="200"/>
                </Grid.ColumnDefinitions>
                <Label Content="Name" Foreground="White" Grid.Column="0" FontSize="20"></Label>
                <Label Content="# of Ingot" Foreground="White" Grid.Column="1" FontSize="20"></Label>
                <Label Content="% of Alloy" Foreground="White" Grid.Column="2" FontSize="20"></Label>
            </Grid>

            <ListBox Name="MetalListBox" HorizontalAlignment="Center" VerticalAlignment="Center" Background="Transparent">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <Grid Margin="0" VerticalAlignment="Center">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="200"/>
                                <ColumnDefinition Width="200"/>
                                <ColumnDefinition Width="200"/>
                            </Grid.ColumnDefinitions>

                            <Label Foreground="White" FontSize="20" Content="{Binding Name}" Grid.Column="0" VerticalAlignment="Center"></Label>
                            <Label Foreground="White" FontSize="20" Content="{Binding IngotCount}" Grid.Column="1" VerticalAlignment="Center"></Label>

                            <TextBox IsReadOnly="True" Focusable="False" Foreground="White" Background="Transparent" BorderThickness="0" FontSize="20" Text="{Binding IngotPercentOfAlloy, StringFormat={}{0:F2}}" Grid.Column="2" VerticalAlignment="Center"></TextBox>
                        </Grid>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
            <Label Name="AlloyVolumeLabel" FontSize="20" Foreground="White" Content="" HorizontalAlignment="Left"></Label>
        </StackPanel>
        
        <Button Content="Save To File" HorizontalAlignment="Center" VerticalAlignment="Bottom" FontSize="30" Click="Button_Click" Visibility="Hidden"></Button>
    </Grid>
</Window>
