<Window x:Class="AlloyCalculatorRewrite.ConfirmWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AlloyCalculatorRewrite"
        mc:Ignorable="d"
        Title="Confirm Window" Height="100" Width="240">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <Button Name="ConfirmButton" Click="ConfirmButton_Click" Content="Confirm" Height="40" Width="120" FontSize="30"></Button>
        </StackPanel>

    </Grid>
</Window>
